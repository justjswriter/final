<h2>Register</h2>

<% if (error) { %>
  <div class="error-message" style="color: red; background: #ffe6e6; padding: 10px; margin-bottom: 10px;">
    <%= error %>
  </div>
<% } %>

<form action="/auth/register" method="POST">
    <input type="text" name="username" placeholder="Username" value="<%= user ? user.username : '' %>" required><br>
    <input type="email" name="email" placeholder="Email" value="<%= user ? user.email : '' %>" required><br>
    <input type="password" name="password" placeholder="Password" required><br>
    <button type="submit">Register</button>
</form>

<a href="/auth/login">Already have an account? Login</a>
